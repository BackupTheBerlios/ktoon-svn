#!/bin/bash

BASE=`dirname $0`

export LD_LIBRARY_PATH=$BASE/src/klib/kgui:$BASE/src/klib/kcore:$BASE/src/klib/ksound/:$BASE/src/store:$BASE/src/libktoon:$BASE/src/libbase:$LD_LIBRARY_PATH
export QT_NO_GLIB=1


if [ "$1" == "-g" ]
then
	shift 1
	gdb -ex run -ex bt --batch --args $BASE/bin/ktoon.bin "$*"
else
	$BASE/bin/ktoon.bin $*
fi


