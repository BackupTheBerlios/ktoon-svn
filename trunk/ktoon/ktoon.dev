#!/bin/bash

BASE=`dirname $0`

export LD_LIBRARY_PATH=$BASE/src/dlib/dgui:$BASE/src/dlib/dcore:$BASE/src/dlib/dsound/:$BASE/src/store:$BASE/src/libktoon:$BASE/src/libbase
export QT_NO_GLIB=1


if [ "$1" == "-g" ]
then
	shift 1
	$BASE/bin/ktoon.bin $*
else
	gdb -ex run -ex bt --batch --args $BASE/bin/ktoon.bin "$*"
fi


