#!/bin/bash

KTD_CONFIG="ktoond_config.pri"


if [ ! ${KTOON_HOME} ]
then
	echo "Please export KTOON_HOME"
	exit -1
fi

echo "# Generated by configure" > $KTD_CONFIG
echo "INCLUDEPATH += ${KTOON_HOME}/include ${KTOON_HOME}/include/ktoon ${KTOON_HOME}/include/store ${KTOON_HOME}/include/base ${KTOON_HOME}/include/dcore/ ${KTOON_HOME}/include/dgui/ ${KTOON_HOME}/include/dsound/" >> $KTD_CONFIG
echo "LIBS += -L${KTOON_HOME}/lib -ldgui -ldcore -ldsound -lktoon -lstore -lktbase" >> $KTD_CONFIG
echo "QT += network xml gui core" >> $KTD_CONFIG

echo << __EOF__ >> $KTD_CONFIG
unix {
MOC_DIR = .moc
UI_DIR = .ui
OBJECTS_DIR = .obj
}
__EOF__



